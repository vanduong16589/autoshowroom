<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fields name="params">
        <fieldset name="tz_portfolio_plus_user"
                  label="PLG_USER_PROFILE_FIELDSET_LABEL">
            <field type="text" name="tz_portfolio_plus_user_url"
                    label="PLG_USER_PROFILE_YOUR_URL_LABEL"/>
            <field type="radio" name="tz_portfolio_plus_user_gender"
                   class="btn-group" default="m"
                   label="PLG_USER_PROFILE_GENDER_LABEL">
                <option value="m">PLG_USER_PROFILE_MALE</option>
                <option value="f">PLG_USER_PROFILE_FEMALE</option>
            </field>
            <field type="media" name="tz_portfolio_plus_user_avatar"
                    label="PLG_USER_PROFILE_AVATAR_LABEL"/>
            <field type="tzmultiplefield" name="tz_portfolio_plus_user_social_link"
                   label="PLG_USER_PROFILE_SOCIAL_LINKS_LABEL">
                <field type="text" name="title" table_required="true"
                       field_required="true"
                       label="JGLOBAL_TITLE"/>
                <field type="text" name="icon_class"
                       label="PLG_USER_PROFILE_ICON_CLASS_LABEL"/>
                <field type="media" name="icon" default=""
                        label="PLG_USER_PROFILE_ICON_LABEL"/>
                <field type="text" name="url" table_required="true"
                       field_required="true"
                       label="PLG_USER_PROFILE_URL_LABEL"/>
            </field>
            <field type="editor" name="tz_portfolio_plus_user_description"
                    label="JGLOBAL_DESCRIPTION"/>
        </fieldset>
    </fields>
</form>